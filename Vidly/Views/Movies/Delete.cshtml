@model Vidly.Models.Movie

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Picture
        </dt>

        <dd>
            @if (Model.GeneralImageUrl == null)
            {
                <p>image not found</p>
            }
            else
            {
                <img src="~/UploadedFiles/@Url.Content(Model.GeneralImageUrl)" width="200" height="300" alt="image not found" />
            }
            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DirectorId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DirectorId)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <button>
                @Html.ActionLink("Back to List", "Index")
            </button>
        </div>
    }
</div>
